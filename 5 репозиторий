#1 task
m = ['круг', 0.25, 'квадрат', 'треугольник', 15, 'круг', 'овал', '10']


items_to_remove = []
for item in m:
    if not isinstance(item, str):
        items_to_remove.append(item)
    
    elif item.isdigit():
         items_to_remove.append(item)


for item in items_to_remove:
   
    m.remove(item)

print(m)
#2 task
abc = ['A', 'B', 'C', 'D', 'E', 'F', 'G']

del abc[1:-2]

print(abc)
#3 task
numbers = [1, 4]

numbers.insert(1, 2)

print(f"После добавления 2: {numbers}")

numbers.insert(2, 3)

print(f">>> {numbers}")
#4 task
mass = [14, -6, 3, 11, 6, 8.5, 99, -20, -6, 10, 40, 0.25, -4, 5]

positive_mass = [x for x in mass if x >= 0]

sorted_asc = sorted(positive_mass)


sorted_desc = sorted(positive_mass, reverse=True)

print(sorted_asc)
print(sorted_desc)
#5 task
negative_numbers = []
positive_numbers = []
zeros = []


num_count = int(input("Введите количество чисел: "))


for _ in range(num_count):
    number = float(input("Введите число: "))
    if number < 0:
        negative_numbers.append(number)
    elif number > 0:
        positive_numbers.append(number)
    else:
        zeros.append(number)


sum_negative = sum(negative_numbers)
print(f"Сумма отрицательных чисел: {sum_negative}")

if positive_numbers:
    average_positive = sum(positive_numbers) / len(positive_numbers)
    print(f"Среднее арифметическое положительных чисел: {average_positive}")
else:
    print("Положительных чисел нет, среднее арифметическое не вычисляется.")


zero_list_modified = ["*" if x == 0 else x for x in zeros]
print(f"Количество нулей: {len(zero_list_modified)}")
print(f"Элементы списка с нулями: {zero_list_modified}")
