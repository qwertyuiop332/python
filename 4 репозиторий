    result = num ** 10
    print(f"–ü–æ—Å–ª–µ–¥–Ω—è—è —Ü–∏—Ñ—Ä–∞ 0: {num}¬π‚Å∞ = {result}")
elif last_digit == 1:
    remainder = num % 3
    print(f"–ü–æ—Å–ª–µ–¥–Ω—è—è —Ü–∏—Ñ—Ä–∞ 1: {num} % 3 = {remainder}")
elif last_digit == 2:
    result = num // 2
    print(f"–ü–æ—Å–ª–µ–¥–Ω—è—è —Ü–∏—Ñ—Ä–∞ 2: {num} // 2 = {result}")
else:
    result = num ** 2
    print(f"–ü–æ—Å–ª–µ–¥–Ω—è—è —Ü–∏—Ñ—Ä–∞ {last_digit} >= 3: {num}¬≤ = {result}")
